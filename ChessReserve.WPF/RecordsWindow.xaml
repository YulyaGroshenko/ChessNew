<Window x:Class="ChessReserve.WPF.RecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessReserve.WPF"
        mc:Ignorable="d"
        Title="RecordsWindow" Height="450" Width="800">
    <Grid x:Name="Grid" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="70"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox>
            <Label>РЕКОРДЫ</Label>
        </Viewbox>
        <Viewbox Grid.Row="1">
            <Label x:Name="RecordsList"></Label>
        </Viewbox>
        <Viewbox MaxHeight="70" Grid.Row="2">
            <Button IsCancel="True" Click="Back_Click">Назад в меню</Button>
        </Viewbox>
    </Grid>
</Window>
